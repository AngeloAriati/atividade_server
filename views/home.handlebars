<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-10">
      <h4>Employee</h4>
    </div>
    <div class="col-2">
      <a href="/create" class="btn btn-primary"><i class="fas fa-plus"></i> New employee</a>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-12">
      <table class="table table-hover" id="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Cpf</th>
            <th scope="col">Address</th>
            <th scope="col">Number</th>
            <th scope="col">Neighborhood</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Mother Name</th>
            <th scope="col">Birth Date</th>
            <th scope="col">Pis</th>
            <th scope="col">Salary</th>
            <th scope="col">Photo</th>
          </tr>
        </thead>
        <tbody>
          {{#each employee as |employee|}}
            <tr>
              <th scope="row">{{employee.id}}</th>
              <td>{{employee.name}}</td>
              <td>{{employee.cpf}}</td>
              <td>{{employee.address}}</td>
              <td>{{employee.number}}</td>
              <td>{{employee.neighborhood}}</td>
              <td>{{employee.city}}</td>
              <td>{{employee.state}}</td>
              <td>{{employee.mother_name}}</td>
              <td>{{employee.birth_date}}</td>
              <td>{{employee.pis}}</td>
              <td>{{employee.salary}}</td>
              <td>{{employee.photo}}</td>
              <td>
                <a href="/{{employee.id}}" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
                <a href="/edit/{{employee.id}}" class="btn btn-sm btn-warning text-white"><i class="fas fa-pen"></i></a>
                <a href="/delete/{{employee.id}}" class="btn btn-sm btn-danger text-white"><i class="fas fa-trash"></i></button>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
