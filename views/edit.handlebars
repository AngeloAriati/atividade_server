<div class="container">
  <div class="row mt-5">
    <div class="col-12">
      <h4>Editing employee</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-12">
      <form action="/edit/{{employee.id}}" method="post">
        <div class="form-group">
          <label for="name">Nome</label>
          <input type="text" class="form-control" id="name" name="name" value="{{employee.name}}">
        </div>
        <div class="form-group">
          <label for="cpf">Cpf</label>
          <input type="text" class="form-control" id="cpf" name="cpf" value="{{employee.cpf}}">
        </div>
        <div class="form-group">
          <label for="address">Address</label>
          <input type="text" class="form-control" id="address" name="adress" value="{{employee.address}}">
        </div>
        <div class="form-group">
          <label for="number">Number</label>
          <input type="text" class="form-control" id="number" name="number" value="{{employee.number}}">
        </div>
        <div class="form-group">
          <label for="neighborhood">Neighborhood</label>
          <input type="text" class="form-group" id="neighborhood" name="neighborhood" value="{{employee.neighborhood}}">
        </div>
        <div class="form-group">
          <label for="city">Cidade</label>
          <input type="text" class="form-group" id="city" name="city" value="{{employee.city}}">
        </div>
        <div class="form-group">
          <label for="state">State</label>
          <input type="text" class="form-group" id="state" name="state" value="{{employee.state}}">
        </div>
        <div class="form-group">
          <label for="mother_name">Mother Name</label>
          <input type="text" class="form-group" id="mother_name" name="mother_name" value="{{employee.mather_name}}">
        </div>
        <div class="form-group">
          <label for="birth_date">Birth date</label>
          <input type="text" class="form-group" id="birth_date" name="birth_date" value="{{employee.birth_date}}">
        </div>
        <div class="form-group">
          <label for="pis">Pis</label>
          <input type="text" class="form-group" id="pis" name="pis" value="{{employee.pis}}">
        </div>
        <div class="form-group">
          <label for="salary">Salary</label>
          <input type="text" class="form-group" id="salary" name="salary" value="{{employee.salary}}">
        </div>
        <div class="form-group">
          <label for="photo">Photo</label>
          <input type="text" class="form-group" id="photo" name="photo" value="{{employee.photo}}">
        </div>

        <button type="submit" class="btn btn-primary">Edit</button>
      </form>
    </div>
  </div>
</div>
